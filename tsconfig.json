
{
  "compilerOptions": {
    "incremental": true,
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2021",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["src/*"],
      "@/tests/*": ["tests/*"]
    },
    "strict": true,
    "noImplicitOverride": true,
    "experimentalDecorators": true,
  },
  "include": ["src", "tests"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    ".webpackCache/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
